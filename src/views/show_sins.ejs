<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de pecados</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    	<link rel="stylesheet" href="/styles/styles.css">
</head><body>
    <div class="background" style="background-image: url('/assets/background.jpg');">
        <div class="container">
            <div class="mini_container">
                <span class="form_title">
                    Pecados capitales
                </span>
                <tbody>
                    <table class="table">
                        <tr>
                            <td>NOMBRE DEL PECADO</td>
                            <td>PODER</td>
                            <td>PELEA</td>
                            <td>PAREJA</td>
                            <td>IMAGEN PELEA</td>
                        </tr>
                        <% if(users.length) { %>
                            <% users.forEach(function(user){ %>
                            <tr>
                                <td><%= user.name %></td>
                                <td><%= user.power %></td>
                                <td><%= user.couple %></td>
                            </tr>
                            <% }) %>
                        <% } %>
                    </table>
                </tbody>
            </div>
        </div>
    </div>
    </div>
</body>

</html>